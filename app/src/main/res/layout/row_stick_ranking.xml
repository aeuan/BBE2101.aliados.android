<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRowStick"
    android:paddingBottom="2dp"
    android:paddingTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/profile_iv"
        app:civ_border_color="#00000000"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:text="carlos "
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userPrivacy"
        android:layout_below="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:textColor="@color/colorBlack"
        android:text="usuario modo no visible"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/point_tv"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_below="@+id/userPrivacy"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:text="puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/position_tv"
        android:layout_below="@+id/point_tv"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/colorGrayText"
        android:text="posicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>