<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">



    <ImageView
        android:id="@+id/eventos_logo_iv"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp" />


    <RelativeLayout
        android:id="@+id/view_check"
        android:background="@drawable/round_button"
        android:alpha="0.5"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/check_icon"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_arrow"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/evento_title_tv"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:layout_toEndOf="@+id/eventos_logo_iv"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/beneficios_description_tv"
        android:textSize="14sp"
        android:layout_toEndOf="@id/eventos_logo_iv"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorGrayText"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/evento_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>