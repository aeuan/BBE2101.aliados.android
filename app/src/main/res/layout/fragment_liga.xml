<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:layout_margin="20dp"
    android:id="@+id/fragment_liga"
    tools:context="com.dacodes.bepensa.fragments.PublishOportunity">

    <ImageView
        android:id="@+id/image_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dotted_rectangle_drawable"
        />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/dotted_circle_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dotted_circle"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/cross_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:padding="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/text_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Quieres sumar más puntos?\nSigue publicando más oportunidades"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dotted_circle_iv"
            android:padding="16dp"
            android:textColor="@color/colorBlack"
            />

    </RelativeLayout>



</RelativeLayout>