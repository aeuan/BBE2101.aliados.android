<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_sms_string"
            />

        <EditText
            android:id="@+id/sms_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="4"
            android:singleLine="true"
            android:hint="Código de Verificación"
            android:inputType="number"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/send_sms_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_sms_string"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@color/colorGrayText"
            />

    </LinearLayout>

    <Button
        android:id="@+id/end_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Registro"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:background="@color/colorOrange"
        android:minHeight="0dp"
        android:padding="16dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
